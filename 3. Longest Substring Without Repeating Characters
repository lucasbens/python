class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        
        n = len(s)
        ans = 0
        # mp stores the current index of a character
        mp = {}

        i = 0
        # try to extend the range [i, j]
        for j in range(n):
            if s[j] in mp and i <= mp[s[j]]:
                i = mp[s[j]] +1

            ans = max(ans, j - i + 1)
            mp[s[j]] = j 

        return ans
